" Enable ideavim `vim-surround`-plugin emulation
set surround
" Add the g flag to search/replace by default
set gdefault
" Highlight current line
set cursorline
" Enable line numbers
set number
" Show “invisible” characters
set listchars=tab:\|\ ,trail:·,nbsp:_
set list
" Make line numbers relative to cursor
set scrolloff=3

" Smart way to move between splits
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

" Map jj to go to normal mode
imap jj <ESC>
set ideajoin
