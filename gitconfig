[core]
  editor = nvim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes

[color]
  ui = auto

[push]
  default = current

[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  d = difftool

[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[diff]
  tool = vimrdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE


[pull]
  rebase = true

[commit]
  gpgsign = false

[interactive]
	singleKey = true

[user]
  name = Michael Borst
