[core]
  editor = nvim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  pager = delta --line-numbers --dark

[color]
  ui = auto

[push]
  default = current

[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  d = difftool

[difftool]
  prompt = false

[difftool "vimrdiff"]
  cmd = vimr --wait --nvim -d $LOCAL $REMOTE

[diff]
  tool = vimrdiff

[pull]
  rebase = true

[commit]
  gpgsign = false

[interactive]
	singleKey = true
  diffFilter = delta --line-numbers --dark --color-only --features=interactive

[delta]
  features = decorations
  side-by-side = true
  syntax-theme = zenburn

[delta "interactive"]
  keep-plus-minus-markers = false

[user]
  name = Michael Borst
