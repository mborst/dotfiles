#!/bin/bash -eu

cli_applications=(
  coreutils
  docker
  findutils
  fpp
  gawk
  git
  gnu-getopt
  gnu-sed
  gnupg
  grep
  gzip
  htop
  jid
  jq
  kubectl
  less
  maven
  neovim
  pv
  reattach-to-user-namespace
  rg
  telnet
  watch
  zsh
)

for application in "${cli_applications[@]}"
do
  read -p "Install $application (y/n)?"$'\n' choice
  case "$choice" in
    y|Y) brew install "$application";;
    n|N) echo "skipping...";;
    *) echo "invalid";;
  esac
done

gui_applications=(
  1password
  adguard
  intellij-idea-ce
  istat-menus
  odrive
  spectacle
  spotify
)

for application in "${gui_applications[@]}"
do
  read -p "Install $application (y/n)?"$'\n' choice
  echo
  case "$choice" in
    y|Y) brew install "$application";;
    n|N) echo "skipping...";;
    * ) echo "invalid";;
  esac
done


read -p $'Install font fira code (y/n)?\n' choice
echo
case "$choice" in
  y|Y)
    brew tap homebrew/cask-fonts
    brew install --cask font-fira-code
    ;;
  n|N) echo "skipping...";;
  *) echo "invalid";;
esac
